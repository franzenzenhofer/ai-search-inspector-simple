{
  "name": "ai-search-inspector-simple",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "clean": "rm -rf dist",
    "clean:zip": "rm -f latest-build.zip",
    "build:sw": "esbuild src/infra/effectServiceWorker.ts --bundle --outfile=dist/serviceWorker.js --platform=browser --target=chrome115 --format=esm",
    "build:content": "esbuild src/infra/effectContentWatcher.ts --bundle --outfile=dist/content.js --platform=browser --target=chrome115 --format=esm",
    "build:panel": "esbuild src/ui/panel.ts --bundle --outfile=dist/panel.js --platform=browser --target=chrome115 --format=esm",
    "copy": "cp manifest.json dist/ && cp sidepanel.html dist/ && cp icon*.png dist/",
    "zip": "cd dist && zip -r ../latest-build.zip . && cd ..",
    "build": "npm run clean && npm run clean:zip && npm run build:sw && npm run build:content && npm run build:panel && npm run copy && npm run zip",
    "lint": "eslint \"src/**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "test": "vitest run --passWithNoTests"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.274",
    "@types/node": "^22.9.0",
    "esbuild": "^0.23.0",
    "eslint": "^8.57.0",
    "@typescript-eslint/parser": "^7.18.0",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "typescript": "^5.4.5",
    "vitest": "^1.3.1"
  }
}
